import random
import time

print("Hi! Welcome to the number guessing game. I am going to pick a number between 1 and 100.")
time.sleep(3)
print("Picking a random number...")
time.sleep(3)
guess = int(input('Guess a number: '))
correct_number = random.randint(1,100)
guess_count = 1

while guess != correct_number:
  time.sleep(1)
  guess_count += 1
  if guess < correct_number:
    guess = int(input("You need to think bigger...What is your guess?: "))
  else:
    guess = int(input("You need to guess lower...What is your guess?:"))

print(f'Congratulations! You guessed the right number! It was {correct_number}. It took you {guess_count} tries :)')

